<Page x:Class="TZI.HashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TZI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HashPage" Width="597.392" Height="400.947">

    <Grid Margin="0,0,0,9.6">
        <Label Content="Исходный текст:" HorizontalAlignment="Left" Margin="60,50,0,0" VerticalAlignment="Top" FontSize="18px"/>
        <Label Content="Обработанный текст:" HorizontalAlignment="Left" Margin="342,50,0,0" VerticalAlignment="Top" FontSize="18px"/>
        <TextBox x:Name="Input_Tb" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="150" Margin="33,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="18px"/>
        <TextBox x:Name="Output_Tb" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="150" Margin="327,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="18px"/>
        <Label Content="Ключ:" HorizontalAlignment="Left" Margin="266,355,0,0" VerticalAlignment="Top" FontSize="18px"/>
        <TextBox x:Name="Key_Tb" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="23" Margin="342,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" FontSize="18px"/>
        <Button x:Name="AddText_Btn" Content="Добавить текст" HorizontalAlignment="Left" Margin="79,273,0,0" VerticalAlignment="Top" Width="144" FontSize="18px" Height="65" Click="AddText_Btn_Click"/>
        <Button x:Name="TestText_Btn_Copy" Content="Проверить текст" HorizontalAlignment="Left" Margin="353,273,0,0" VerticalAlignment="Top" Width="144" FontSize="18px" Height="65" Click="TestText_Btn_Copy_Click"/>

    </Grid>
</Page>
